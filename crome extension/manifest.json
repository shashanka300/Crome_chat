{
  "manifest_version": 3,
  "name": "Site Intelligence Layer",
  "version": "1.0",
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }
],
  "permissions": ["sidePanel", "activeTab", "scripting"],
  "host_permissions": ["http://localhost:11434/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open Chat"
  }
}